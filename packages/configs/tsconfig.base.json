{
  "compilerOptions": {
    "rootDirs": ["./src", "./__tests__"],
    "noEmit": true,
    "noImplicitAny": false,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "importHelpers": true,
    "removeComments": true,
    "target": "ESNext",
    "module": "commonjs",
    "lib": [
      "dom","esnext"
    ],
    "allowJs": true,
    "strict": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "skipLibCheck": true
  },
  "ts-node": {
    "swc": true
  }
}
