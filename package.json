{
  "name": "syncmaven",
  "version": "0.0.0",
  "description": "",
  "author": "Vladimir Klimontovich <v@klimontovich.com>",
  "publishConfig": {
    "access": "public"
  },
  "workspaces": [
    "packages/core",
    "packages/configs",
    "packages/node-cdk",
    "packages/connectors/*",
    "packages/protocol"
  ],
  "bin": "./bin/syncmaven",
  "files": [
    "bin",
    "dist",
    "README.md"
  ],
  "devDependencies": {
    "monorel": "^0.5.0"
  },
  "scripts": {
    "main": "pnpm run --filter ./packages/core  -r main",
    "release": "monorel --npm-tag latest --filter './packages/protocol'  --filter './packages/node-cdk' --filter './packages/core' --publish",
    "canary": "monorel --npm-tag canary --filter './packages/protocol'  --filter './packages/node-cdk' --filter './packages/core' --version '0.0.5-alpha.{rev}' --publish",
    "connectors:canary": "monorel --filter './packages/connectors/**'  --version '0.0.1-alpha.{rev}' --npm-tag canary --publish",
    "test": "pnpm run -r test",
    "build": "pnpm run -r build",
    "format:check": "prettier --ignore-unknown --check --config ./packages/configs./.prettierrc.json --ignore-path packages/configs/.prettierignore $(git diff --name-only --diff-filter d | xargs)",
    "format:check:all": "prettier --check --config ./packages/configs/.prettierrc.json --ignore-path packages/configs/.prettierignore .",
    "format": "prettier --ignore-unknown --write --config ./packages/configs/.prettierrc.json --ignore-path packages/configs/.prettierignore $(git diff --name-only --diff-filter d | xargs)",
    "format:all": "prettier --write --config ./packages/configs/.prettierrc.json --ignore-path packages/configs/.prettierignore ."
  },
  "ts-node": {
    "swc": true
  }

}